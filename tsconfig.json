{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "es2022",
      "noImplicitAny": true,
      "noEmitOnError": true,
      "removeComments": false,
      "sourceMap": false,
      "target": "ESNext",
      "outDir": "js",
      "strict": true,
      "baseUrl": ".",
      "paths": {
          "js/*": ["ts/*"]
      }
    },
    "include": [
      "types/**/*.d.ts",
      "ts/**/*"
    ]
}